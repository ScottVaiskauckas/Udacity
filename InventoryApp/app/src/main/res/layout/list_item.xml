<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListParentLayout">

    <LinearLayout
        android:id="@+id/list_view_layout"
        style="@style/ListLinearLayout">

    <TextView
        android:id="@+id/name"
        style="@style/ListTextView.Name"/>

            <TextView
                android:id="@+id/price"
                style="@style/ListTextView.Price"/>
    </LinearLayout>

    <TextView
        style="@style/ListTextView"
        android:text="@string/list_quantity"
        android:layout_toLeftOf="@+id/quantity"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/quantity"
        style="@style/ListTextView.Quantity" />

    <Button
        android:id="@+id/sale"
        style="@style/ListSellButton"
        android:text="@string/sell" />

</RelativeLayout>